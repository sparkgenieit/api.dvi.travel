meta {
  name: 01 - Authenticate - Get Token
  type: http
  seq: 1
}

post {
  url: https://sharedapi.tektravels.com/SharedData.svc/rest/Authenticate
  body: json
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "ClientId": "ApiIntegrationNew",
    "UserName": "Doview",
    "Password": "Doview@12345",
    "EndUserIp": "192.168.1.1"
  }
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Has TokenId", function() {
    expect(res.getBody().TokenId).to.exist;
  });
}

script:post-response {
  if (res.getStatus() === 200) {
    const jsonData = res.getBody();
    if (jsonData.Status === 1) {
      bru.setEnvVar('tbo_token_id', jsonData.TokenId);
      bru.setEnvVar('token_expiry', new Date(Date.now() + 12 * 60 * 60 * 1000).toISOString());
    }
  }
}
